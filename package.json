{
  "name": "diy-nav-web",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "dev": "turbo run dev --concurrency 20",
    "dev:web": "turbo run dev --filter=web... --concurrency 20",
    "dev:api": "turbo run dev --filter=api... --concurrency 20",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:api": "turbo run build --filter=api",
    "preview": "pnpm -C apps/web preview",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "stylelint": "turbo run stylelint",
    "stylelint:fix": "turbo run stylelint -- --fix",
    "format": "turbo run format",
    "format:fix": "prettier --write \"**/*.{js,ts,vue,scss,css,html,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "rm -rf node_modules **/*/node_modules **/*/dist",
    "prepare": "husky",
    "check": "turbo run check",
    "ci:verify": "turbo run check && turbo run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.15.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-scss": "^6.12.1",
    "turbo": "^2.6.3",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^7.2.2",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^3.0.0"
  },
  "packageManager": "pnpm@8.8.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/web/src/**/*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "apps/api/**/*.{js,ts}": [
      "eslint --fix"
    ],
    "packages/*/src/**/*.{js,ts}": [
      "eslint --fix"
    ],
    "apps/web/src/**/*.{scss,css,vue}": [
      "stylelint --fix"
    ],
    "**/*.{js,ts,vue,scss,css,html,json,md}": [
      "prettier --write"
    ]
  }
}
