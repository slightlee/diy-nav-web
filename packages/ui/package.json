{
  "name": "@nav/ui",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/nav-ui.umd.js",
  "module": "dist/nav-ui.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/styles"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nav-ui.es.js",
      "require": "./dist/nav-ui.umd.js"
    },
    "./style.css": "./dist/ui.css",
    "./styles": {
      "import": "./dist/ui.css",
      "require": "./dist/ui.css",
      "default": "./dist/ui.css"
    },
    "./styles/variables": "./src/styles/variables.scss",
    "./styles/mixins": "./src/styles/mixins.scss",
    "./styles/*": "./src/styles/*"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && vue-tsc --emitDeclarationOnly --declaration --declarationDir dist"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0"
  },
  "devDependencies": {
    "sass": "^1.83.0",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "vue": "3.5.13",
    "vue-tsc": "^2.1.10"
  }
}
